{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "incremental": true,
      "lib": [
        "es2021",
        "esnext.asynciterable"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2021",
      "sourceMap": true,
      "declaration": false,
      "outDir": "dist",
      "rootDir": "src",
      "noImplicitAny": true
    },
    "include": ["src"]
  }